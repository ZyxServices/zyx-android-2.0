<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/rlTop"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        >
        <ImageView
            android:id="@+id/ivVenueDetailBack"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/nav_back"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="攀岩场详情"
            android:textSize="18sp"
            android:textColor="#333333"
            />
        <ImageView
            android:id="@+id/ivVenueDetailMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/btn_more"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
<android.support.v4.widget.NestedScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/rlTop"
    >
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home_page_search_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tiyujia.homesport.common.homepage.activity.HomePageSearchResultActivity">
    <TextView
        style="@style/finelin" />
    <com.w4lle.library.NineGridlayout
        android:id="@+id/nglVenueDetail"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="成都理工大学攀岩基地"
            android:id="@+id/tvVenueDetailName"
            android:textColor="#333333"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="25dp"
            android:layout_height="13dp"
            android:text="室内"
            android:gravity="center"
            android:background="@drawable/border_green"
            android:textSize="8sp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/tvVenueTypeA"
            android:textColor="#8bda64"/>
        <TextView
            android:layout_width="25dp"
            android:layout_height="13dp"
            android:background="@drawable/border_green"
            android:text="抱石"
            android:layout_gravity="center_vertical"
            android:textSize="8sp"
            android:gravity="center"
            android:id="@+id/tvVenueTypeB"
            android:layout_marginLeft="10dp"
            android:textColor="#8bda64"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            android:textSize="12sp"
            android:text="难度系数"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/tab_start_n"
            android:id="@+id/ivDegree1"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="2dp"
            android:scaleType="centerCrop"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/tab_start_n"
            android:scaleType="centerCrop"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="2dp"
            android:id="@+id/ivDegree2"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/tab_start_n"
            android:scaleType="centerCrop"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="2dp"
            android:id="@+id/ivDegree3"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/tab_start_n"
            android:id="@+id/ivDegree4"
            android:scaleType="centerCrop"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="2dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/tab_start_n"
            android:scaleType="centerCrop"
            android:layout_gravity="center_vertical"
            android:id="@+id/ivDegree5"
            />
    </LinearLayout>
    <TextView
        style="@style/boldlin" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="17.5dp"
        android:layout_marginBottom="12.5dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/btn_adress"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="成都市体育馆二号馆三楼篮球中心场地"
            android:textSize="12sp"
            android:id="@+id/tvVenueDetailAddress"
            android:textColor="#333333"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="【我去过】"
            android:textSize="12sp"
            android:textColor="@color/orange"
            android:layout_marginLeft="10dp"
            android:id="@+id/tvMeGone"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17.5dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/btn_phone2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13681929137"
            android:id="@+id/tvVenuePhone"
            android:textSize="12sp"
            android:textColor="#333333"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <TextView
        style="@style/boldlin" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333333"
        android:textSize="16sp"
        android:text="岩场概况"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="17.5dp"
        android:layout_marginBottom="17.5dp"/>
    <WebView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:id="@+id/wvVenueDetail"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:src="@drawable/demo_10"
        android:scaleType="fitXY"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>
    <include layout="@layout/activity_home_page_venue_detail_bottom"></include>
</LinearLayout>
</android.support.v4.widget.NestedScrollView>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@color/orange">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="憋说话，敲字"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:drawableLeft="@mipmap/btn_write"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:background="@null"
            android:drawablePadding="10dp"
            />
    </LinearLayout>
</RelativeLayout>