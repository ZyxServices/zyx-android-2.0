<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/personal_layout">
    <RelativeLayout
        style="@style/personal_title_background"
        >
        <TextView
            style="@style/personal_title"
            android:text="文章详情"
            />
        <ImageView
            android:id="@+id/ivMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/btn_more"
            android:paddingTop="20dp"
            android:layout_alignParentRight="true"
            />
        <ImageView
            android:id="@+id/ivBack"
            style="@style/personal_back"
            />
    </RelativeLayout>
    <TextView
        style="@style/finelin" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dip12"
        android:paddingRight="@dimen/dip12"
        android:background="@color/white"
        >
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/ivAvatar"
            app:riv_oval="true"
            app:riv_tile_mode="clamp"
            style="@style/small_avatar"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dip10"
                android:layout_marginRight="@dimen/dip12"
                android:orientation="horizontal"
                android:layout_marginTop="18dp"
                >
                <TextView
                    android:id="@+id/tvNickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/day_edit_color"
                    android:textSize="15sp"
                    />
                <ImageView
                    android:id="@+id/ivLv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/day_edit_hit_color"
                android:textSize="12sp"
                android:paddingTop="2dp"
                android:ellipsize="end"
                android:maxEms="15"
                android:singleLine="true"
                android:maxLines="1"
                android:text="dsasadsa"
                android:paddingLeft="@dimen/dip10"
                />
        </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/tv_not"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="取消"
            android:textSize="12sp"
            android:drawableLeft="@mipmap/btn_close"
            android:background="@drawable/attention_not"
            android:textColor="@color/day_edit_hit_color"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/tv_yes"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="关注"
            android:textSize="12sp"
            android:drawableLeft="@mipmap/btn_add"
            android:background="@drawable/attention_yes"
            android:textColor="@color/green"
            android:visibility="gone"
            />

    </LinearLayout>
    <TextView
        style="@style/boldlin"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp16"
            android:textColor="@color/day_edit_color"
            android:text="dsajkdsal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            />
        <WebView
            android:id="@+id/webview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        style="@style/boldlin"/>
</LinearLayout>
