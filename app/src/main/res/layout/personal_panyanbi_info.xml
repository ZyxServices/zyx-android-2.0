<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/personal_layout">
    <include layout="@layout/public_title"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:text="攀岩币明细(近两个月)"
        android:textColor="@color/day_edit_hit_color"
        android:padding="@dimen/dip12"
        android:textSize="@dimen/sp_12"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dip12"
        android:paddingRight="@dimen/dip12"
        >
        <TextView
            style="@style/finelin"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="67dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/day_edit_color"
                    android:textSize="15sp"
                    android:text="点赞"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2016-9-10 15:30"
                    android:textSize="12sp"
                    android:textColor="@color/day_edit_hit_color"
                    />
            </LinearLayout>
            <TextView
                style="@style/panyanbi_text"
                android:text="+1"
                />
        </RelativeLayout>
        <TextView
            style="@style/finelin"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="67dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/day_edit_color"
                    android:textSize="15sp"
                    android:text="发布评论"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2016-9-10 15:30"
                    android:textSize="12sp"
                    android:textColor="@color/day_edit_hit_color"
                    />
            </LinearLayout>
            <TextView
                style="@style/panyanbi_text"
                android:text="+2"
                />
        </RelativeLayout>
        <TextView
            style="@style/finelin"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="67dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/day_edit_color"
                    android:textSize="15sp"
                    android:text="发布动态"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2016-9-10 15:30"
                    android:textSize="12sp"
                    android:textColor="@color/day_edit_hit_color"
                    />
            </LinearLayout>
            <TextView
                style="@style/panyanbi_text"
                android:text="+2"
                />
        </RelativeLayout>
        <TextView
            style="@style/finelin"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="67dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/day_edit_color"
                    android:textSize="15sp"
                    android:text="第一次使用APP"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2016-9-10 15:30"
                    android:textSize="12sp"
                    android:textColor="@color/day_edit_hit_color"
                    />
            </LinearLayout>
            <TextView
                style="@style/panyanbi_text"
                android:text="+5"
                />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:padding="@dimen/dip12"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/liaojie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/day_edit_hit_color"
            android:textSize="12sp"
            android:text="没有更多了"
            />
    </LinearLayout>
</LinearLayout>
