<?xml version="1.0" encoding="utf-8"?>
<LinearLayout style="@style/personal_layout"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        style="@style/personal_title_background"
        >
        <TextView
            android:id="@+id/tvTitle"
            style="@style/personal_title"
            />
        <ImageView
            android:id="@+id/ivSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/btn_seach2"
            android:paddingTop="20dp"
            android:layout_alignParentRight="true"
            />
        <ImageView
            android:id="@+id/ivBack"
            style="@style/personal_back"
            />
    </RelativeLayout>

    <TextView
        style="@style/finelin"
        />
    <TextView
        android:id="@+id/tv_tuijian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:text="为您推荐"
        android:textColor="@color/day_edit_hit_color"
        android:padding="@dimen/dip12"
        android:textSize="@dimen/sp_12"
        android:visibility="gone"
        />
    <include layout="@layout/recycleview_layout"/>
</LinearLayout>
